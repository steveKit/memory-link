{
  // Kotlin settings
  "kotlin.languageServer.enabled": true,
  "kotlin.debugAdapter.enabled": true,

  // Gradle settings
  "gradle.autoDetect": "on",
  "gradle.javaDebug.cleanOutput": true,

  // Editor settings for Kotlin (regular .kt files)
  "editor.formatOnSave": true,
  "[kotlin]": {
    "editor.defaultFormatter": "fwcd.kotlin",
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },

  // Disable formatting for Gradle Kotlin DSL files
  // The fwcd.kotlin formatter doesn't understand Gradle DSL syntax
  "[gradle]": {
    "editor.formatOnSave": false
  },

  // File associations - keep .kts as kotlin for syntax highlighting,
  // but we've disabled format-on-save for gradle files above
  "files.associations": {
    "*.kts": "kotlin",
    "*.gradle.kts": "gradle"
  },

  // Exclude build directories from search
  "search.exclude": {
    "**/build": true,
    "**/.gradle": true,
    "**/app/schemas": true
  },

  // Exclude from file watcher
  "files.watcherExclude": {
    "**/build/**": true,
    "**/.gradle/**": true
  }
}
