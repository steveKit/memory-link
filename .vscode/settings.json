{
    // Kotlin settings
    "kotlin.languageServer.enabled": true,
    "kotlin.debugAdapter.enabled": true,
    
    // Gradle settings
    "gradle.autoDetect": "on",
    "gradle.javaDebug.cleanOutput": true,
    
    // Editor settings for Kotlin
    "editor.formatOnSave": true,
    "[kotlin]": {
        "editor.defaultFormatter": "fwcd.kotlin",
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    
    // File associations
    "files.associations": {
        "*.kts": "kotlin"
    },
    
    // Exclude build directories from search
    "search.exclude": {
        "**/build": true,
        "**/.gradle": true,
        "**/app/schemas": true
    },
    
    // Exclude from file watcher
    "files.watcherExclude": {
        "**/build/**": true,
        "**/.gradle/**": true
    }
}
